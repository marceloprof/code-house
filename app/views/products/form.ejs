<html>
    <body>
        <form action="/products" method="post">
            <div>
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" placeholder="Enter the product title"/>
            </div>
            <div>
                <label for="price">Price:</label>
                <input type="text" id="price" name="price" placeholder="###.##"/>
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea id="description" name="description" placeholder="Enter the product description"></textarea>
            </div>
            <div>
                <input type="submit" value="Save"/>
            </div>
        </form>
    </body>
</html>